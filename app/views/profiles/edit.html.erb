<% breadcrumb :edit_profile %>
<%= content_for(:title, t(".title")) %>

<div class="flex-1 bg-base-200/50">
  <div class="pt-4 md:pt-6 mb-6">
    <div class="container mx-auto px-4">
      <%= render "shared/breadcrumbs" %>
    </div>
  </div>

  <section class="pb-8 md:pb-12 lg:pb-16">
    <div class="container mx-auto px-4">
      <div class="max-w-3xl mx-auto">
        <div class="flex flex-col md:flex-row md:justify-between md:items-end gap-6 mb-8 md:mb-12 border-b border-primary/10 pb-6">
          <h2 class="text-3xl md:text-4xl font-serif font-medium text-primary tracking-wide"><%= t(".title") %></h2>
          <%= link_to profile_path,
                      class: "btn btn-ghost text-primary hover:bg-primary/10 rounded-full px-3 gap-2 self-start" do %>
            <%= inline_svg_tag("back.svg", class: "fill-current w-5 h-5") %>マイページへ
          <% end %>
        </div>

        <%# プロフィール編集フォーム %>
        <%= form_with model: @user, url: profile_path do |f| %>
          <div class="card bg-white border border-base-200/60">
            <div class="card-body p-6 md:p-8">
              <%= render "shared/error_message", object: f.object %>

              <div class="space-y-2">
                <div class="form-control"
                    data-controller="char-counter"
                    data-char-counter-min-value="<%= User::NAME_MIN_LENGTH %>"
                    data-char-counter-max-value="<%= User::NAME_MAX_LENGTH %>">
                  <%= f.label :name, class: "font-serif font-medium text-primary text-base mb-2" %>
                  <%= f.text_field :name,
                                  placeholder: "ニックネームを入力",
                                  class: "input input-bordered w-full bg-base-50 focus:bg-white transition-colors",
                                  data: {
                                    char_counter_target: "input",
                                    action: "input->char-counter#updateCount focus->char-counter#markAsTouched"
                                  } %>
                  <div class="text-right text-sm text-neutral/60 mt-1">
                    <span data-char-counter-target="counter">0</span> / <%= User::NAME_MAX_LENGTH %>文字
                  </div>
                </div>

                <div class="form-control"
                    data-controller="char-counter"
                    data-char-counter-max-value="<%= User::SELF_INTRODUCTION_MAX_LENGTH %>"
                    data-char-counter-exclude-line-breaks-value="true">
                  <%= f.label :self_introduction, class: "font-serif font-medium text-primary text-base mb-2" %>
                  <%= f.text_area :self_introduction,
                                  rows: 8,
                                  placeholder: "自己紹介を入力",
                                  class: "textarea textarea-bordered w-full resize-none bg-base-50 focus:bg-white transition-colors",
                                  data: {
                                    char_counter_target: "input",
                                    action: "input->char-counter#updateCount focus->char-counter#markAsTouched"
                                  } %>
                  <div class="text-right text-sm text-neutral/60 mt-1">
                    <span data-char-counter-target="counter">0</span> / <%= User::SELF_INTRODUCTION_MAX_LENGTH %>文字
                  </div>
                </div>
              </div>

              <div class="flex flex-col gap-4 mt-5">
                <%= f.submit "更新する",
                            class: "btn btn-primary w-full shadow-md hover:shadow-lg transition-all hover:-translate-y-0.5 rounded-full" %>
                <%= link_to "キャンセル",
                            profile_path,
                            class: "btn btn-outline w-full rounded-full px-8" %>
              </div>
            </div>
          </div>
        <% end %>

        <%# アカウント削除セクション %>
        <div class="card bg-white border border-base-200/60 mt-6">
          <div class="card-body p-6 md:p-8">
            <h3 class="text-xl font-serif font-medium text-primary mb-4"><%= t("devise.registrations.edit.cancel_my_account") %></h3>
            <div class="mb-6 p-4 rounded-xl border border-base-200">
              <p class="text-sm text-neutral/80 leading-relaxed">
                アカウントを削除すると、投稿したレビューやお気に入りなど、すべてのデータが完全に削除されます。<br>
                <span class="font-medium text-error">※ この操作は取り消せません。</span>
              </p>
            </div>
            <%= render "account_delete_modal" do %>
              <button data-action="auto-modal#show" class="btn btn-error text-base-100 w-full shadow-md hover:shadow-lg transition-all hover:-translate-y-0.5 rounded-full">
                <%= t("devise.registrations.edit.cancel_my_account") %>
              </button>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </section>
</div>
