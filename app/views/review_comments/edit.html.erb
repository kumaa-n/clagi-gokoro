<%= turbo_frame_tag dom_id(@review_comment) do %>
  <div class="card bg-base-100 border border-base-300">
    <div class="card-body">
      <h2 class="text-2xl text-primary font-semibold mb-6">コメントを編集</h2>
      <% cancel_options = { class: "btn btn-ghost" } %>
      <% cancel_options[:data] = { turbo_frame: dom_id(@review_comment) } if turbo_frame_request? %>
      <%= render "form",
                 review_comment: @review_comment,
                 song: @song,
                 review: @review,
                 submit_label: "コメントを更新する",
                 cancel_path: review_comment_path(@review_comment),
                 cancel_options: cancel_options %>
      <% unless turbo_frame_request? %>
        <div class="flex justify-end mt-4">
          <%= link_to "レビュー詳細に戻る", review_path(@review), class: "btn btn-ghost" %>
        </div>
      <% end %>
    </div>
  </div>
<% end %>
