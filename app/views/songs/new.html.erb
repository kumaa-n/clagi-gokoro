<div class="flex-1 flex justify-center items-center min-h-full px-4 py-8">
  <div class="container mx-auto px-4">
    <div class="max-w-2xl mx-auto">
      <div class="card bg-base-100 border border-base-300 shadow-sm">
        <div class="card-body p-8">
          <h2 class="text-3xl font-bold text-center mb-8 text-primary">新しい曲を追加</h2>

          <%= form_with model: @song, local: true do |f| %>
            <%= render "shared/error_message", object: f.object %>

            <div class="mb-6">
              <%= f.label :title, "曲名", class: "label" %>
              <%= f.text_field :title, placeholder: "曲名を入力（100文字以内）", class: "input w-full" %>
            </div>

            <div class="mb-6">
              <%= f.label :composer, "作曲者", class: "label" %>
              <%= f.text_field :composer, placeholder: "作曲者を入力（50文字以内）", class: "input w-full" %>
            </div>

            <div class="mb-6">
              <%= f.label :arranger, "編曲者", class: "label" %>
              <%= f.text_field :arranger, placeholder: "編曲者を入力（50文字以内）", class: "input w-full" %>
            </div>

            <!-- 確認チェックボックス -->
            <div class="mb-8">
              <label class="label cursor-pointer justify-start gap-3">
                <input type="checkbox" class="checkbox checkbox-primary" required />
                <span class="label-text">この曲がすでに登録されていないことを確認しました</span>
              </label>
            </div>

            <!-- ボタン -->
            <div class="flex gap-4 justify-center">
              <%= link_to "キャンセル", songs_path, class: "btn btn-outline btn-neutral px-8" %>
              <%= f.submit "曲追加", class: "btn bg-primary text-base-100 px-8" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
