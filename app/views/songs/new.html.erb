<div class="flex-1 flex justify-center items-center min-h-full px-4 py-8">
  <div class="p-6 md:p-10 rounded-lg w-full max-w-lg bg-base-100 border border-base-300">
    <h2 class="text-2xl md:text-3xl font-semibold text-center mb-8 text-primary">新しい曲を追加</h2>

    <%= form_with model: @song do |f| %>
      <%= render "shared/error_message", object: f.object %>

      <div class="mb-4 md:mb-6">
        <%= f.label :title, "曲名", class: "label" %>
        <%= f.text_field :title, placeholder: "曲名を入力（100文字以内）", class: "w-full input" %>
      </div>

      <div class="mb-4 md:mb-6">
        <%= f.label :composer, "作曲者", class: "label" %>
        <%= f.text_field :composer, placeholder: "作曲者を入力（50文字以内）", class: "w-full input" %>
      </div>

      <div class="mb-4 md:mb-6">
        <%= f.label :arranger, "編曲者", class: "label" %>
        <%= f.text_field :arranger, placeholder: "編曲者を入力（50文字以内）", class: "w-full input" %>
      </div>

      <div class="mb-4 md:mb-6">
        <label class="label cursor-pointer flex gap-3">
          <input type="checkbox" class="checkbox checkbox-primary" required />
          <span class="label-text text-sm md:text-base">曲が登録されていないことを確認しました</span>
        </label>
      </div>

      <div class="mt-8">
        <%= f.submit "曲追加", class: "w-full btn btn-primary" %>
      </div>
    <% end %>
  </div>
</div>
