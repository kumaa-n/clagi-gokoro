<% if song.present? %>
  <div data-controller="auto-modal" data-auto-modal-open-value="true">
    <dialog class="modal" data-auto-modal-target="dialog">
      <div class="modal-box bg-white rounded-2xl shadow-xl border border-base-200/60 p-6 md:p-8">
        <h3 class="font-serif font-medium text-xl text-primary mb-4">レビューを投稿しますか？</h3>
        <p class="py-4 text-neutral/80">曲の追加が完了しました！<br>あなたの感じた難易度をシェアしてみませんか？</p>
        <div class="modal-action flex gap-3">
          <form method="dialog" class="flex-1">
            <button class="btn btn-outline w-full rounded-full px-8">あとで</button>
          </form>
          <%= link_to "投稿する", new_song_review_path(song), class: "btn btn-primary w-full shadow-md hover:shadow-lg transition-all hover:-translate-y-0.5 rounded-full flex-1" %>
        </div>
      </div>
      <form method="dialog" class="modal-backdrop bg-neutral/20 backdrop-blur-sm">
        <button>close</button>
      </form>
    </dialog>
  </div>
<% end %>
