<div class="flex-1 justify-center items-center min-h-full px-4 py-8">
  <% if @prompt_song.present? %>
    <div data-controller="auto-modal" data-auto-modal-open-value="true">
      <dialog id="review_prompt_modal" class="modal" data-auto-modal-target="dialog">
        <div class="modal-box">
          <h3 class="font-bold text-lg mb-4">レビューを投稿しますか？</h3>
          <p class="py-4">あなたの感じた難易度をシェアしましょう。</p>
          <div class="modal-action">
            <form method="dialog">
              <button class="btn">あとで</button>
            </form>
            <%= link_to "レビューを投稿する", new_song_review_path(@prompt_song), class: "btn bg-primary text-base-100" %>
          </div>
        </div>
        <form method="dialog" class="modal-backdrop">
          <button>close</button>
        </form>
      </dialog>
    </div>
  <% end %>

  <!-- ヘッダーセクション -->
  <section class="bg-base-100 py-8">
    <div class="container mx-auto px-4">
      <div class="flex justify-between items-center">
        <h1 class="text-4xl font-bold text-primary">曲一覧</h1>

        <% if user_signed_in? %>
          <%= link_to new_song_path, class: "btn bg-primary text-base-100" do %>
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
            </svg>
            新しい曲を追加
          <% end %>
        <% end %>
      </div>
    </div>
  </section>

  <!-- カードセクション -->
  <section class="bg-base-100 py-8">
    <div class="container mx-auto px-4">
      <% if @songs.any? %>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
          <% @songs.each do |song| %>
            <div class="card bg-base-100 border border-base-300">
              <div class="card-body">
                <h3 class="card-title text-stone-800 mb-2 line-clamp-2 break-all"><%= song.title %></h3>

                <p class="text-sm text-neutral mb-1 line-clamp-1 break-all">
                  作曲者：<%= song.composer.presence || "ー" %>
                </p>

                <p class="text-sm text-neutral mb-3 line-clamp-1 break-all">
                  編曲者：<%= song.arranger.presence || "ー" %>
                </p>

                <% reviews_count = song.has_attribute?(:reviews_count) ? song.read_attribute(:reviews_count) : song.reviews.size %>
                <% average_overall_rating = if song.has_attribute?(:average_overall_rating)
                  song.read_attribute(:average_overall_rating)
                else
                  song.reviews.average(:overall_rating)
                end %>
                <% reviews_total = reviews_count.to_i %>

                <div class="flex items-center gap-1 mb-2">
                  <span class="text-sm text-neutral">平均総合難易度：</span>
                  <% if average_overall_rating.present? && reviews_total.positive? %>
                    <% rounded_average = average_overall_rating.to_f %>
                    <div class="rating">
                      <% 5.times do |star| %>
                        <% if star + 1 == rounded_average %>
                          <div class="mask mask-star-2 bg-amber-500" aria-label="<%= star + 1 %> star" aria-current="true"></div>
                        <% else %>
                          <div class="mask mask-star-2 bg-amber-500" aria-label="<%= star + 1 %> star"></div>
                        <% end %>
                      <% end %>
                    </div>
                  <% else %>
                    <span class="text-sm text-neutral">ー</span>
                  <% end %>
                </div>

                <p class="text-sm text-red-600 mb-4">レビュー数：<%= reviews_total %></p>

                <div class="card-actions justify-end">
                  <%= link_to "詳細を見る", song_reviews_path(song), class: "btn bg-primary text-base-100" %>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      <% else %>
        <div class="text-center py-12">
          <p class="text-2xl text-neutral mb-4">まだ曲が登録されていません</p>

          <% if user_signed_in? %>
            <%= link_to "最初の曲を追加する", new_song_path, class: "btn bg-primary text-base-100" %>
          <% else %>
            <p class="text-base text-neutral mb-4">曲を追加するには、ログインまたは新規登録が必要です</p>
            <%= link_to "ログイン / 新規登録", new_user_session_path, class: "btn bg-primary text-base-100" %>
          <% end %>
        </div>
      <% end %>
    </div>
  </section>
</div>
