<div class="divider text-xs sm:text-sm text-base-content/60 my-4 md:my-6">または</div>

<div class="text-center">
  <%= button_to user_google_oauth2_omniauth_authorize_path,
                data: { turbo: false },
                class: "w-full btn btn-outline border-base-300 hover:bg-base-200 gap-2 sm:gap-3 h-10 rounded-full mb-8" do %>
    <%= inline_svg_tag("google-logo.svg") %>
    <span class="text-sm sm:text-base font-normal"><%= t(".sign_in_with_provider", provider: "Google") %></span>
  <% end %>

  <%- if controller_name != "sessions" %>
    <%= link_to t(".sign_in"), new_session_path(resource_name), class: "link link-primary hover:link-hover text-sm md:text-base block mb-2" %>
  <% end %>

  <%- if devise_mapping.registerable? && controller_name != "registrations" %>
    <%= link_to t(".sign_up"), new_registration_path(resource_name), class: "link link-primary hover:link-hover text-sm md:text-base block mb-2" %>
  <% end %>

  <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
    <%= link_to t(".forgot_your_password"), new_password_path(resource_name), class: "link link-primary hover:link-hover text-sm md:text-base block mb-2" %>
  <% end %>
</div>
