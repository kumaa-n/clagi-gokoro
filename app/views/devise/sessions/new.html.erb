<%= content_for(:title, t(".title")) %>

<div class="flex-1 flex justify-center items-center px-4 py-8 md:py-12 lg:py-16 bg-base-200/50 xl:min-h-[calc(100vh-4rem)]">
  <div class="p-8 md:p-12 rounded-2xl w-full max-w-lg bg-white">
    <h2 class="text-3xl md:text-4xl font-serif font-medium text-center mb-8 md:mb-10 text-primary tracking-wide">
      <%= t(".title") %>
    </h2>

    <%= form_with model: resource, as: resource_name, url: session_path(resource_name), class: "space-y-6" do |f| %>
      <%= render "shared/error_message", object: resource %>

      <div>
        <%= f.label :name, class: "font-serif font-medium text-primary text-base" %>
        <%= f.text_field :name, autofocus: true, autocomplete: "name", placeholder: "ニックネームを入力", class: "input input-bordered w-full bg-base-100/50 focus:bg-white" %>
      </div>

      <div>
        <%= f.label :password, class: "font-serif font-medium text-primary text-base" %>
        <%= f.password_field :password, autocomplete: "current-password", placeholder: "パスワードを入力", class: "input input-bordered w-full bg-base-100/50 focus:bg-white" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="flex items-center gap-2 ml-1">
          <%= f.check_box :remember_me, class: "checkbox checkbox-sm checkbox-primary mt-0.5 rounded-md" %>
          <%= f.label :remember_me, class: "text-neutral/80 text-sm cursor-pointer select-none" %>
        </div>
      <% end %>

      <div class="pt-2">
        <%= f.submit t(".sign_in"), class: "btn btn-primary w-full shadow-md hover:shadow-lg transition-all hover:-translate-y-0.5 rounded-full" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
