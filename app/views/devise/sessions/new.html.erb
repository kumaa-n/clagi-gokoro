<div class="flex-1 flex justify-center items-center min-h-full px-4 py-8">
  <div class="p-10 rounded-lg w-full max-w-lg bg-base-100 border border-base-300">
    <h2 class="text-3xl font-semibold text-center mb-8 text-primary"><%= t("devise.sessions.new.sign_in") %></h2>

    <%= form_with model: resource, as: resource_name, url: session_path(resource_name) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="mb-6">
        <%= f.label :email, class: "label" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "メールアドレスを入力", class: "w-full input" %>
      </div>

      <div class="mb-6">
        <%= f.label :password, class: "label" %>
        <%= f.password_field :password, autocomplete: "new-password", placeholder: "パスワードを入力", class: "w-full input" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me, class: "text-neutral" %>
        </div>
      <% end %>

      <div class="mt-8">
        <%= f.submit t("devise.sessions.new.sign_in"), class: "w-full btn btn-primary" %>
      </div>
    <% end %>

    <div class="text-center mt-6 text-neutral">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
