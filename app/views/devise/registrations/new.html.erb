<div class="flex-1 flex justify-center items-center min-h-full px-4 py-8">
  <div class="p-10 rounded-lg w-full max-w-lg bg-base-100 border border-base-300">
    <h2 class="text-3xl font-semibold text-center mb-8 text-primary"><%= t("devise.registrations.new.sign_up") %></h2>

    <%= form_with model: resource, as: resource_name, url: registration_path(resource_name) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="mb-6">
        <%= f.label :name, class: "label" %>
        <%= f.text_field :name, autofocus: true, class: "w-full input" %>
      </div>

      <div class="mb-6">
        <%= f.label :email, class: "label" %>
        <%= f.email_field :email, autocomplete: "email", class: "w-full input" %>
      </div>

      <div class="mb-6">
        <%= f.label :password, class: "label" %>
        <%= f.password_field :password, autocomplete: "new-password", class: "w-full input" %>
      </div>

      <div class="mb-6">
        <%= f.label :password_confirmation, class: "label" %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "w-full input" %>
      </div>

      <div class="mt-8">
        <%= f.submit t("devise.registrations.new.sign_up"), class: "w-full btn btn-primary" %>
      </div>
    <% end %>

    <div class="text-center mt-6 text-neutral">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
