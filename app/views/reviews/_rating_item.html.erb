<div class="mb-6">
  <label class="font-semibold block mb-2"><%= label %></label>
  <div class="mb-2">
    <%= star_rating_display(rating, size: "lg") %>
  </div>
  <details class="text-sm text-base-content/70">
    <summary class="cursor-pointer hover:text-base-content">評価の目安 +</summary>
    <div class="mt-2 pl-4 space-y-2">
      <p class="text-neutral"><%= description %></p>
      <ul class="space-y-1">
        <% criteria.each do |criterion| %>
          <li><span class="font-semibold"><%= criterion[:star] %></span>：<%= criterion[:text] %></li>
        <% end %>
      </ul>
    </div>
  </details>
</div>
