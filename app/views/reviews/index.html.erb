<% breadcrumb :song_reviews, @song %>
<%= content_for(:title, t(".title")) %>

<div class="flex-1 bg-base-200/50">
  <div class="pt-4 md:pt-6 mb-6">
    <div class="container mx-auto px-4">
      <%= render "shared/breadcrumbs" %>
    </div>
  </div>

  <section class="pb-8 md:pb-12 lg:pb-16">
    <div class="container mx-auto px-4">
      <div class="flex flex-col md:flex-row md:justify-between md:items-end gap-6 mb-8 md:mb-12 border-b border-primary/10 pb-6">
        <div class="flex-1">
          <%= render "song_header", song: @song, title: "レビュー一覧" %>
        </div>
        <div class="mt-4 md:mt-0">
          <% if user_signed_in? %>
            <% if @user_review.present? %>
              <%= link_to review_path(@user_review), class: "btn btn-primary shadow-md hover:shadow-lg transition-all hover:-translate-y-0.5 rounded-full px-6" do %>
                <%= inline_svg_tag("user.svg", class: "fill-current") %>
                <span class="ml-1">自分のレビューを見る</span>
              <% end %>
            <% else %>
              <%= link_to new_song_review_path(@song), class: "btn btn-primary shadow-md hover:shadow-lg transition-all hover:-translate-y-0.5 rounded-full px-6" do %>
                <%= inline_svg_tag("add.svg", class: "fill-current") %>
                <span class="ml-1">レビューを投稿</span>
              <% end %>
            <% end %>
          <% end %>
        </div>
      </div>

      <%# タグ絞り込み表示 %>
      <% if @selected_tag.present? %>
        <div class="mb-6 flex items-center gap-3 p-4 bg-primary/5 rounded-xl border border-primary/20">
          <span class="text-sm text-neutral/80">絞り込み中:</span>
          <span class="badge badge-primary"><%= @selected_tag %></span>
          <%= link_to "絞り込みを解除", song_reviews_path(@song), class: "btn btn-ghost btn-sm rounded-full" %>
        </div>
      <% end %>

      <% if @reviews.any? %>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-8">
          <% @reviews.each do |review| %>
            <%= render "reviews/review_card", review: review %>
          <% end %>
        </div>

        <div class="mt-12 md:mt-16">
          <%= paginate @reviews %>
        </div>
      <% else %>
        <div class="flex flex-col items-center justify-center py-20 md:py-32 text-center">
          <div class="w-24 h-24 bg-white rounded-full flex items-center justify-center mb-6">
            <%= inline_svg_tag "review-empty.svg" %>
          </div>
          <p class="text-xl md:text-2xl font-serif text-primary/80 mb-6">まだレビューが投稿されていません</p>

          <% if user_signed_in? %>
            <%= link_to "最初のレビューを投稿する", new_song_review_path(@song), class: "btn btn-primary rounded-full px-8 shadow-md hover:shadow-lg transition-all" %>
          <% else %>
            <p class="text-neutral/60 mb-6">レビューを追加するには、ログインまたは新規登録が必要です</p>
            <%= link_to "ログイン / 新規登録", new_user_session_path, class: "btn btn-primary rounded-full px-8 shadow-md hover:shadow-lg transition-all" %>
          <% end %>
        </div>
      <% end %>
    </div>
  </section>
</div>
