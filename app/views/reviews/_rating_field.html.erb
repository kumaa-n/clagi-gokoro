<div class="mb-6 <%= 'outline outline-2 outline-error rounded-lg p-4' if f.object.errors[field].any? %>">
  <label class="block font-serif font-medium text-primary text-base mb-2"><%= label %><span class="text-error mx-1">*</span></label>
  <div class="rating rating-lg gap-1 mb-2">
    <% (1..5).each do |i| %>
      <%= f.radio_button field, i,
        class: "mask mask-star-2 bg-orange-400",
        id: "review_#{field}_#{i}",
        data: { action: "change->review-form#updatePreview" } %>
    <% end %>
  </div>
  <details class="text-sm text-base-content/70">
    <summary class="cursor-pointer hover:text-base-content">評価の目安 +</summary>
    <div class="mt-2 pl-4 space-y-2">
      <%= description %>
    </div>
  </details>
</div>
